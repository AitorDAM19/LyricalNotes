<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="cardViewStyle">@style/AppTheme</item>
        <item name="coordinatorLayoutStyle">@style/AppTheme</item>
        <!--<item name="android:fontFamily">@font/beautiful_people</item> !-->
    </style>

    <style name="fuente_notas">
        <item name="android:fontFamily">sans-serif</item>

    </style>

    <style name="fuente_notas.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginAndSignup" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:foregroundTint">@android:color/black</item>
    </style>
</resources>
