<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diurno.dam2.lyricalnotes">
    <uses-permission android:name="android.permission.INTERNET"/>
    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:theme="@style/LoginAndSignup" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".VistaNotas" android:screenOrientation="portrait">

        </activity>
        <activity android:name=".CrearNota" android:screenOrientation="portrait"/>
        <activity android:name=".SignupActivity" android:theme="@style/LoginAndSignup" android:screenOrientation="portrait"/>
        <service android:name=".MediaPlayerService" />
    </application>

</manifest>